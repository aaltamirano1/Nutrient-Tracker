<div style="margin: 30px 20px">
	 <%= link_to journal_bydate_path do %>
    <button class="btn btn-default pull-right" style="margin: 10px 20px 0 0; background-color: transparent;">View By Date</button>
  <% end %>
<h1>Journal</h1>
<% @nutrients.each do |nutrient| %>
	<% if nutrient.user_id == current_user.id %>

<h3 style="font-size: 1.7em;padding: 20px 0 0 0;border-top: 2px solid grey;"><%= nutrient.name %></h3>
<table class="table">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.order(:rating) each do |rating| %>	
    	<% if rating.nutrient_id == nutrient.id %>
      <tr>
        <td><span class="badge" style="font-size: 1.1em;margin:20px 0 0 10px;"><%= rating.rating %></span></td>
        <td>
        	<p style="font-size: .9em;"><em><%= Time.parse(rating.date).strftime("%b %e, %Y") %></em></p>
        	<p><%= rating.notes %></p>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<% end %>
<% end %>
</div>