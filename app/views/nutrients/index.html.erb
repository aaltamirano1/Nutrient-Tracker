<div id="nutrient-index-heading">
  <%= link_to new_nutrient_path do %>
      <button id="new-nutrient" class="btn button-primary pull-right">+ Track New Nutrient</button>
  <% end %>

  <h1>Nutrient Tracker</h1>
</div>
<% @nutrients.each do |nutrient| %>
  <%if nutrient.user_id === current_user.id %>
    <div class="well">
      <h2><%= nutrient.name %></h2>
      <p>Your Goal: <em><%= nutrient.goal %></em></p><hr>
      <%= link_to 'Details', nutrient, class: "btn btn-default" %>
      <%= link_to 'Edit', edit_nutrient_path(nutrient), class: "btn btn-default", style: "width: 69px; margin-left: 3px;" %>
      <%= link_to nutrient, method: :delete, data: { confirm: 'Are you sure?' } do  %>
        <button class="btn btn-danger pull-right" style="padding: 6px 8px">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
      <% end %>
    </div>
  <% end %>
<% end %>


